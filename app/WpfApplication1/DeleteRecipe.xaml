<controls:MetroWindow x:Class="WpfApplication1.DeleteRecipe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Eyða Uppskrift" Height="173.75" Width="388.75" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" KeyDown="Window_KeyDown"
        Style="{StaticResource SecondaryWindowStyle}">
    <Grid>
        <Label Content="Skrifið 'Eyða' og smellið á OK til að staðfesta." HorizontalAlignment="Left" Margin="46,29,0,0" VerticalAlignment="Top" Width="250"/>
        <TextBox x:Name="txtConfirm" HorizontalAlignment="Left" Height="23" Margin="46,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <Button x:Name="btnDelete" Content="OK" HorizontalAlignment="Left" Margin="203,103,0,0" VerticalAlignment="Top" Width="75" Click="btnDelete_Click"/>
        <Button x:Name="btnCancel" Content="Hætta" HorizontalAlignment="Left" Margin="283,103,0,0" VerticalAlignment="Top" Width="76" Click="btnCancel_Click"/>

    </Grid>
</controls:MetroWindow>
